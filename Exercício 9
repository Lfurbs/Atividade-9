#include <stdio.h>

int main() {

    int vetor[6];

    printf("Informe 6 valores pares:\n");
    for (int i = 0; i < 6; i++) {
        do {
            scanf("%d", &vetor[i]);

            if (vetor[i] % 2 != 0) {
                printf("Esse numero nao Ã© par.\n");
            }
        } while (vetor[i] % 2 != 0);
    }

    printf("Valores lidos na ordem inversa:\n");
    for (int i = 5; i >= 0; i--) {
        printf("%d\n", vetor[i]);
    }

    return 0;
}
