#include <stdio.h>

int main() {

    int vetor[10];

    printf("DInforme 10 valores:\n");
    for (int i = 0; i < 10; i++) {
        scanf("%d", &vetor[i]);
    }

    int maior = vetor[0];
    int posiM = 0;

    for (int i = 1; i < 10; i++) {
        if (vetor[i] > maior) {
            maior = vetor[i];
            posiM = i;
        }
    }

    printf("Vetor digitado:\n");
    for (int i = 0; i < 10; i++) {
        printf("%d ", vetor[i]);
    }
    printf("\n");

    printf("O maior elemento e: %d\n", maior);
    printf("Ele estÃ¡ na posicao: %d\n", posiM);

    return 0;
}
